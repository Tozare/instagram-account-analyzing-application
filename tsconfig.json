{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./src",                             /* Base directory to resolve non-absolute module names. */
    "paths": {
      "pages/*": ["./pages/*"],
      "widgets/*": ["./widgets/*"],
      "features/*": ["./features/*"],
      "entities/*": ["./entities/*"],
      "shared/*": ["./shared/*"],
    }
  },
}
